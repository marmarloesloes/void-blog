<!DOCTYPE html>

<body>
    <%- include("partials/header.ejs") %>

    </div>

    <div class="overview">

        <% blogs.forEach(blog => { %>
        <h2><%= blog.title %></h2>

        <% if(blog.date) { %>
            <div class="date">
                <p>created on: <%= blog.date %></p>
            </div>
            <% }; %>

        <p><%= blog.content %></p>

        <div class="buttons">
        <form action="/<%= blog.id %>?_method=DELETE" method="POST">
            <button id="delete" type="submit" onclick="return confirm('Are you sure you want to delete this beauty of a post?');">Delete</button>
        </form>
        <a href="/edit/<%= blog.id %>">
            <button id="edit" type="submit">Edit</button>
        </a>
        </div>

        <hr> <!-- This creates a horizontal line -->

        <% }) %>

    </div>
    
</body>
</html>